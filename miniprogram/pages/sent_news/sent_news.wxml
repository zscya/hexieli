<!--pages/sent_news/sent_news.wxml-->
<view class="container">
    <form bindsubmit="formSubmit">
        <view class="form-box">
            <view class="row-wrap">
                <view class="label">新闻标题</view>
                <view class="label-right">
                    <input type="text" class="input" name="news_title" placeholder="新闻标题" />
                </view>
            </view>
            <view class="row-wrap">
                <view class="label">新闻类型</view>
                <view class="label-right">
                    <input type="text" class="input" name="news_type" placeholder="新闻类型"/>
                </view>
            </view>
            <view class="row-wrap" style="display:none">
                <view class="label">时间</view>
                <view class="label-right">
                    <input name="changetime" class="input" value="{{changetime}}" type="number" />
                </view>
            </view>
            <view class="text">
                <view class="title">新闻详情</view>
                <view class="text_content">
                    <textarea name="news_description"cols="5" rows="5" auto-height="true"></textarea>
                </view>
            </view>
            <view class="fb_content">
                <view class="fb_tool">
                    <button bindtap="handleChooseImg">+</button>
                    <view class="up_img_item" wx:for="{{chooseImgs}}" wx:key="*this" data-index="{{index}}" bindtap="handleRemoveImg">
                        <UpImg src="{{item}}"></UpImg>
                    </view>
                </view>
            </view>


        </view>
        <button type="primary" class="btn" form-type="submit">提交</button>
        <button type="primary" class="btn" form-type="reset">重置</button>
    </form>
</view>