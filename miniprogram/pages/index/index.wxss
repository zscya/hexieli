.index_swiper swiper {
  width: 750rpx;
  height: 350rpx;
}
.index_swiper swiper image {
  width: 100%;
  height: 100%;
}
.index_floor .floor_group {
  border-radius: 20rpx;
  border: 5rpx solid #eeeeee;
  padding: 20rpx;
  margin: 10rpx;
}
.index_floor .floor_group .floor_group_top {
  position: relative;
  margin-bottom: 20rpx;
}
.index_floor .floor_group .floor_group_top .floor_title {
  font-size: 65rpx;
  /* color: var(--themeColor); */
  color: #444242;
}
.index_floor .floor_group .floor_group_top .floor_more {
  font-size: 30rpx;
  position: absolute;
  right: 10rpx;
  bottom: 30rpx;
  top: 20rpx;
  color: #9e9a9a;
}
.index_floor .floor_group .floor_list {
  margin-top: 15rpx;
  font-size: 30rpx;
  color: #999595;
  border-bottom: 2rpx solid #eeeeee;
}
.index_floor .floor_group .floor_list .floor_list_info {
  padding: 15rpx;
}
.index_floor .floor_group .first_tab {
  position: relative;
  right: 25rpx;
  top: 20rpx;
}
.index_floor .floor_group .first_tab .goods_item {
  display: flex;
  border-bottom: 1rpx solid #FAFAFA;
}
.index_floor .floor_group .first_tab .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 250rpx;
  height: 200rpx;
}
.index_floor .floor_group .first_tab .goods_item .goods_img_wrap image {
  width: 80%;
  height: 80%;
}
.index_floor .floor_group .first_tab .goods_item .goods_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.index_floor .floor_group .first_tab .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.index_floor .floor_group .first_tab .goods_item .goods_info_wrap .goods_price_wrap {
  color: #919191;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.index_floor .floor_group .first_tab .goods_item .goods_info_wrap .goods_position {
  font-size: 25rpx;
}
.text_title{
  
  font-size: 40rpx;
}
