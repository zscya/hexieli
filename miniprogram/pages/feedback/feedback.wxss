/* pages/feedback/feedback.wxss */
page {
  background-color: #eeeeee;
}
.fb_main {
  padding: 20rpx;
  color: #666666;
}
.fb_main .fb_title {
  font-size: 35rpx;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_tips text {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #ffffff;
  margin: 20rpx 10rpx;
  font-size: 35rpx;
}
.fb_main .fb_content {
  background-color: #ffffff;
  margin-top: 20rpx;
}
.fb_main .fb_content textarea {
  padding: 10rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_content .fb_tool button {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: #cccccc;
  background-color: #eeeeee;
}
.fb_main .fb_content .fb_tool .up_img_item {
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.fb_main .fb_content .fb_tool .up_img_item .up_img_wrap {
  width: 90rpx;
  height: 90rpx;
  position: relative;
}
.fb_main .fb_content .fb_tool .up_img_item .up_img_wrap image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.fb_main .fb_content .fb_tool .up_img_item .up_img_wrap icon {
  position: absolute;
  top: -22rpx;
  right: -22rpx;
}
.fb_main .form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .form_btn_wrap button {
  background-color: red;
  color: white;
  width: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
}
