<!--pages/shequlogin/shequlogin.wxml-->
<view class="container">
    
    <text class="title">登录</text>
    <form bindsubmit="formSubmit">
        <view class="form-box">
            <view class="row-wrap">
                <view class="label-right">
                    <input name="username" class="input" type="text" placeholder="请输入用户名(shanglancun)" />
                </view>
            </view>
            <view class="row-wrap">
                <view class="label-right">
                    <input type="text" class="input" name="password" placeholder="请输入密码(123456)" />
                </view>
            </view>
        </view>
        <button class="btn" plain="true" size="mini"form-type="submit">提交</button>
    </form>
</view>